LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=

# Optional: set if you want to strictly react only when mentioned
# You can get your bot's userId from the Messaging API account info endpoint or debug logs
BOT_USER_ID=

# Claude API key (https://console.anthropic.com/)
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
# Optional: override image model used for mascot generation
# Default (if unset): gemini-2.5-flash-image-preview
GEMINI_IMAGE_MODEL=

# Server
PORT=3000
DB_PATH=./data/app.sqlite

# LIFF / LINE Login
# Create a LIFF app and set its endpoint to your server's /liff/index.html URL
LIFF_ID=
# Required to verify LIFF ID token server-side (LINE Login channel ID)
LINE_LOGIN_CHANNEL_ID=
# For local demo only: set to 1 to skip OIDC verification (NOT for production)
SKIP_OIDC_VERIFY=

# Optional: if set, Flex will link directly to your endpoint instead of using the LIFF deep link.
# Example: https://abcd-1234.ngrok-free.app
PUBLIC_BASE_URL=

# Optional: protect admin endpoints (deadline updates)
ADMIN_SECRET=
